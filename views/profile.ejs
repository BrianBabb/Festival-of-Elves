<%- include('partials/header') %>

<div class="container mt-5">

    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">
                    <h3>Create Profile</h3>
                    <!-- Makes POST request to /login route -->
                    <form action="/familyProfile" method="post">
                        <div class="form-group">
                            <!-- <label for="firstName">First Name</label> -->
                            <input type="text" class="form-control" placeholder="Parent First Name" name="firstName" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="lastName">Last Name</label> -->
                            <input type="text" class="form-control" placeholder="Parent Last Name" name="lastName" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="child1">First Child Full Name</label> -->
                            <input type="text" class="form-control" placeholder="First Child Name" name="child1" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="Child2">Second Child Full Name</label> -->
                            <input type="text" class="form-control" placeholder="Second Child Name" name="child2">
                        </div>
                        <h4>Please choose two elves from the list or enter your own elves </h4>
                        <div class="form-group">
                            <!-- <label for="Elf1">Select Elf from the list</label> -->
                            <input type="text" class="form-control" placeholder="First Elf" name="elf1" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="Elf2">Select second Elf from the list</label> -->
                            <input type="text" class="form-control" placeholder="Second Elf" name="elf2">
                        </div>
                        <ul>
                            <li>Joy</li>
                            <li>Hope</li>
                            <li>Noelle</li>
                            <li>Esparanza</li>
                            <li>Frosty</li>
                            <li>Eve</li>
                        </ul>
                        <button type="submit" class="btn btn-dark">Create Profile</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        Sign In with Google
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/index.js"></script>
<%- include('partials/footer') %>


